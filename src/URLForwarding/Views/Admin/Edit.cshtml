@model UrlRecord

@{
    ViewBag.Title = "Edit";
}

<h2>Edit @Model.Short</h2>

<div class="row">
    <div class="col-lg-12">
        @using (Html.BeginForm("SaveChanges", "Admin", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            <input style="display:none" value="@ViewBag.PriorURL" name="ReturnUrl" id="ReturnUrl" type="url" readonly="readonly" />
            <div class="form-group">
                <label class="col-md-2 control-label">Short URL:</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(x => x.Short, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">Complete URL:</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(x => x.UrlData, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <div class="checkbox">
                        @Html.CheckBoxFor(x => x.IsEnable)
                        <label>Enable</label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-default">Save</button>
                </div>
            </div>
        }
    </div>
</div>